{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a href="{{ action_add_vendor }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <h1>{{ text_carriers }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if flashMessage %}
            <div class="alert {{ flashMessage.class }} alert-dismissible"><i class="fa {{ flashMessage.icon }}"></i> {{ flashMessage.text }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-12 col-sm-12 hidden-sm hidden-xs">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-list"></i> {{ panel_title }} : {{ country_name }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12 col-sm-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <td class="text-left">{{ carrier_settings_country_column_name }}</td>
                                            <td class="text-right">{{ carrier_settings_country_column_action }}</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for vendor in vendors %}
                                        <tr>
                                            <td class="text-left">{{ vendor.cart_name ?: vendor.name }}</td>
                                            <td class="text-right">
                                                <a data-toggle="tooltip" title="" class="btn btn-primary">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a data-toggle="tooltip" title="" class="btn btn-danger js-delete-vendor" href="{{ vendor.delete_vendor }}">
                                                    <i class="fa fa-trash-o"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    {% if vendors|length == 0 %}
                                        <tr>
                                            <td class="text-center" colspan="2">{{ text_no_results }}</td>
                                        </tr>
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
<script>
    $(function(){
        let confirmText = '{{ vendor_delete_confirm }}';
        $('.js-delete-vendor').on('click', function(){
            return confirm(confirmText)
        });
    });
</script>

{{ footer }}
