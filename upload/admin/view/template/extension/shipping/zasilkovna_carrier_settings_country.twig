{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <h1>{{ text_carriers }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-sm-12 hidden-sm hidden-xs">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-list"></i> {{ panel_title }} : {{ country_name }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12 col-sm-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                    {% for column_title in columns_titles %}
                                        {% if loop.last %}
                                            <td class="text-right">
                                        {% else %}
                                            <td class="text-left">
                                        {% endif %}
                                            {{ column_title }}
                                        </td>
                                    {% endfor %}
                                    </thead>
                                    <tbody>
                                    {% for vendor in vendors %}
                                        <tr>
                                            <td class="text-left">{{ vendor.name }}</td>
                                            <td class="text-left">{{ vendor.carrier_name_cart }}</td>
                                            <td class="text-right">
                                                <a data-toggle="tooltip" title="" class="btn btn-primary">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    {% if vendors|length == 0 %}
                                        <tr>
                                            <td class="text-center" colspan="{{ columns_titles|length }}">{{ text_no_results }}</td>
                                        </tr>
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>

{{ footer }}
