{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ text_carriers }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
            <div class="pull-right" style="margin-top: -5px;">
                <button type="submit" form="form-add-vendor" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ action_back }}" data-toggle="tooltip" title="{{ text_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i> </a>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        {% if flashMessage %}
            <div class="alert {{ flashMessage.class }} alert-dismissible"><i class="fa {{ flashMessage.icon }}"></i> {{ flashMessage.text }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_add_carrier }} {{ country_name }}: {{ new_vendor_text }}
                </h3>
            </div>
            <div class="panel-body">
                <form action="{{ link_form_action }}" method="post" id="form-add-vendor" class="form-horizontal">
                    <input type="hidden" name="action" value="{{ action }}"/>
                    <input type="hidden" name="country" value="{{ country }}"/>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group required">
                                <label class="col-sm-2 control-label"  for="input-vendor">{{ vendor_label }}</label>
                                <div class="col-sm-10">
                                    <select name="vendor" id="input-vendor" class="form-control">
                                        <option value="">{{ text_select_vendor }}</option>
                                        {% if vendors %}
                                            <optgroup label="{{ carriers_optgroup }}">
                                            {% for vendor in vendors %}
                                                {% if vendor.vendor_id == vendor %}
                                                    <option value="{{ vendor.vendor_id }}"
                                                            selected="selected">{{ vendor.name }}</option>
                                                {% else %}
                                                    <option value="{{ vendor.vendor_id }}">{{ vendor.name }}</option>
                                                {% endif %}
                                            {% endfor %}
                                            </optgroup>
                                        {% endif %}
                                        {% if internal_vendors %}
                                            <optgroup label="{{ packeta_optgroup }}">
                                            {% for vendor in internal_vendors %}
                                                {% if vendor.vendor_id == vendor %}
                                                    <option value="{{ vendor.vendor_id }}"
                                                            selected="selected">{{ vendor.name }}</option>
                                                {% else %}
                                                    <option value="{{ vendor.vendor_id }}">{{ vendor.name }}</option>
                                                {% endif %}
                                            {% endfor %}
                                            </optgroup>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-cart-name">
                                    <span data-toggle="tooltip" title="{{ help_cart_name }}">{{ entry_cart_name }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="cart_name"
                                           value="{{ cart_name }}"
                                           placeholder="{{ entry_cart_name }}"
                                           id="input-cart-name" class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-default-free-shipping-limit">
                                    <span data-toggle="tooltip" title="{{ help_default_free_shipping_limit }}">
                                        {{ entry_default_free_shipping_limit }}
                                    </span>
                                </label>
                                <div class="col-sm-10">
                                    <input type="number" step="0.01" min="0" name="free_shipping_limit"
                                           value="{{ free_shipping_limit }}"
                                           placeholder="{{ entry_default_free_shipping_limit }}"
                                           id="input-default-free-shipping-limit" class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                                <div class="col-sm-10">
                                    <select name="is_enabled" id="input-status" class="form-control">
                                        {% if is_enabled %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <fieldset>
                                <legend>{{ text_weight_rules }}</legend>
                                <div class="table-responsive">
                                    <table id="weight_rules" class="table table-striped table-bordered table-hover">
                                        <thead>
                                        <tr>
                                            <td class="text-left required">{{ entry_weight_to_kg }}</td>
                                            <td class="text-left required">{{ entry_shipping_price }}</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for weight_rule in weight_rules %}
                                            <tr id="weight_rule_row{{ loop.index0 }}" class="weight_rules_row">
                                                {% if weight_rule.id %}
                                                    <input type="hidden" name="weight_rules[{{ loop.index0 }}][id]" value="{{ weight_rule.id }}"/>
                                                {% endif %}
                                                <td class="text-left{% if weight_rule.max_weight == '' %} has-error {% endif %}">
                                                    <input type="number" step="0.1" min="0" name="weight_rules[{{ loop.index0 }}][max_weight]"
                                                           value="{{ weight_rule.max_weight }}"
                                                           placeholder="{{ entry_weight_to }}"
                                                           class="form-control required"/>
                                                </td>
                                                <td class="text-left{% if weight_rule.price == '' %} has-error {% endif %}">
                                                    <input type="number" step="0.01" min="0" name="weight_rules[{{ loop.index0 }}][price]"
                                                           value="{{ weight_rule.price }}"
                                                           placeholder="{{ entry_price }}"
                                                           class="form-control required"/>
                                                </td>
                                                <td>
                                                    <button class="btn btn-danger" type="button" onclick="$(this).closest('.weight_rule_row').remove()">
                                                        <i class="fa fa-minus-circle"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="2"></td>
                                                <td>
                                                    <button class="btn btn-primary" type="button" onclick="add()">
                                                        <i class="fa fa-plus-circle"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript"><!--
    var weight_rule_row = {{ weight_rules|length }};
    function add() {
        let html = '<tr id="weight_rule_row' + weight_rule_row + '" class="weight_rule_row">';
        html += '<td class="text-left"><input type="number" step="0.1" min="0" name="weight_rules[' + weight_rule_row + '][max_weight]" value="" placeholder="{{ entry_weight_to }}" class="form-control required"/></td>';
        html += '<td class="text-left"><input type="number" step="0.01" min="0" name="weight_rules[' + weight_rule_row + '][price]" value="" placeholder="{{ entry_price }}" class="form-control required"/></td>';
        html += '<td><button class="btn btn-danger" type="button" onclick="$(this).closest(\'.weight_rule_row\').remove()"><i class="fa fa-minus-circle"></i></button></td>';
        html += '</tr>';

        $('#weight_rules tbody').append(html);

        weight_rule_row++;
    }

     $(document).ready(function () {
        $('body').on('change blur', 'td>input.form-control.required', function () {
            let controlValue = $(this).val();
            if (controlValue === '' || controlValue == null) {
                $(this).closest('td').addClass('has-error');
            } else {
                $(this).closest('td').removeClass('has-error');
            }
        });
     })
//--></script>

