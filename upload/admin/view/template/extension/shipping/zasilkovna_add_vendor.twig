{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ text_carriers }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if flashMessage %}
            <div class="alert {{ flashMessage.class }} alert-dismissible"><i class="fa {{ flashMessage.icon }}"></i> {{ flashMessage.text }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="pull-right" style="margin-top: -5px;">
                    <button type="submit" form="form-add-vendor" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-sm btn-primary"><i class="fa fa-save"></i></button>
                </div>
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_add_carrier }} Czech republic: Nový vendor
                </h3>
            </div>
            <div class="panel-body">
                <form action="{{ link_form_action }}" method="post" enctype="multipart/form-data" id="form-add-vendor" class="form-horizontal">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"  for="input-vendor">{{ entry_vendors }} Vendor</label>
                                <div class="col-sm-10">
                                    <select name="shipping_zasilkovna_vendor" id="input-vendor"
                                            class="form-control">
                                        <option value="">{{ text_select_vendor }}</option>
                                        <optgroup label="{{ text_vendors }}Dopravci">
                                        {% for vendor in vendors %}
                                            {% if vendor.vendor_id == shipping_zasilkovna_vendor %}
                                                <option value="{{ vendor.vendor_id }}"
                                                        selected="selected">{{ vendor.name }}</option>
                                            {% else %}
                                                <option value="{{ vendor.vendor_id }}">{{ vendor.name }}</option>
                                            {% endif %}
                                        {% endfor %}
                                        </optgroup>>
                                        {% if internal_vendors%}
                                            <optgroup label="{{ text_packeta_internal_vendors }}Zásilkovna">
                                            {% for vendor in internal_vendors %}
                                                {% if vendor.vendor_id == shipping_zasilkovna_vendor %}
                                                    <option value="{{ vendor.vendor_id }}"
                                                            selected="selected">{{ vendor.name }}</option>
                                                {% else %}
                                                    <option value="{{ vendor.vendor_id }}">{{ vendor.name }}</option>
                                                {% endif %}
                                            {% endfor %}
                                            </optgroup>
                                        {% endif %}
                                    </select>
                                </div>
                        </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-cart-name"><span
                                            data-toggle="tooltip" title="{{ help_cart_name }} tooltip pro jméno v košíku">{{ entry_cart_name }}Název vendora v košíku</span></label>
                                <div class="col-sm-10">
                                    <input type="text" name="shipping_zasilkovna_cart_name"
                                           value="{{ shipping_zasilkovna_cart_name }}"
                                           placeholder="{{ entry_cart_name }}Název vendora v košíku"
                                           id="input-cart-name" class="form-control"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-default-free-shipping-limit">
                                    <span data-toggle="tooltip" title="{{ help_default_free_shipping_limit }}"> {{ entry_default_free_shipping_limit }} </span>
                                </label>
                                <div class="col-sm-10">
                                    <input type="number" step="0.01" min="0" name="shipping_zasilkovna_default_free_shipping_limit"
                                           value="{{ shipping_zasilkovna_default_free_shipping_limit }}"
                                           placeholder="{{ entry_default_free_shipping_limit }}"
                                           id="input-default-free-shipping-limit" class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-status"><span data-toggle="tooltip" title="{{ help_status }}">{{ entry_status }}</span></label>
                                <div class="col-sm-10">
                                    <select name="shipping_zasilkovna_status" id="input-status" class="form-control">
                                        {% if shipping_zasilkovna_status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_weight_rules}} Váhová pravidla
                </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <td class="text-left">{{ entry_weight_to }}Hmotnost do (kg)</td>
                                        <td class="text-left">Dopravné</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for weight_rule in weight_rules %}
                                        <tr>
                                            <td class="text-left">
                                                <input type="number" step="0.1" min="0" name="shipping_zasilkovna_weight_rules[{{ weight_rule.weight_rule_id }}][weight_to]"
                                                       value="{{ weight_rule.weight_to }}"
                                                       placeholder="{{ entry_weight_to }}"
                                                       class="form-control"/>
                                            </td>
                                            <td class="text-left">
                                                <input type="number" step="0.01" min="0" name="shipping_zasilkovna_weight_rules[{{ weight_rule.weight_rule_id }}][price]"
                                                       value="{{ weight_rule.price }}"
                                                       placeholder="{{ entry_price }}"
                                                       class="form-control"/>
                                            </td>
                                            <td><button class="btn btn-danger" type="button" onclick="remove()"><i class="fa fa-minus-circle"></i></button></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                    <td colspan="2"></td>
                                        <td><button class="btn btn-primary" type="button" onclick="add()"><i class="fa fa-plus-circle"></i></button></td>
                                    </tr>
                                    </tfoot>
                                </table>
                    </div>
                </div>
            </div>
        </div>
</div>

{{ footer }}
